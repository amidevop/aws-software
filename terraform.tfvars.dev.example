# Development Environment Configuration
# Copy this file to terraform.tfvars.dev and customize

aws_region   = "us-east-1"
name_prefix  = "lz-dev"
tags = {
  Project     = "LandingZone"
  Environment = "dev"
  Owner       = "DevOps"
}

# Networking
vpc_cidr_block       = "10.1.0.0/16"
public_subnet_count  = 2
private_subnet_count = 2
enable_nat_gateway   = true
single_nat_gateway   = true  # Cost savings for dev

# Compute
ec2_use_public_subnets = true
ec2_create_key_pair    = true
ec2_generated_key_save_to = "lz-dev.pem"
compute_os = "both"

# Instance counts
linux_instance_count   = 2
windows_instance_count = 1

linux_instance_defaults = {
  instance_type = "t3.micro"
  subnet_index  = 0
}

windows_instance_defaults = {
  instance_type = "t3.small"
  subnet_index  = 1
}

# ALB
enable_alb        = true
alb_listener_port = 80
app_port          = 80

# S3
create_s3_bucket = true
s3_bucket_name   = "lz-dev-storage"

# RDS
create_rds                 = true
rds_engine                 = "mysql"
rds_engine_version         = "8.0"
rds_parameter_group_family = "mysql8.0"
rds_instance_class         = "db.t3.micro"
rds_allocated_storage      = 20
rds_username               = "admin"
# rds_password should be set via GitHub Secret: RDS_PASSWORD
rds_db_name                = "devdb"
rds_multi_az               = false
rds_publicly_accessible    = false
rds_backup_retention_period = 3
rds_deletion_protection    = false

